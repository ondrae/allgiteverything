<p id="notice"></p>

<div class="page-header">
  <h1><%= @collection.name %> <small><%= @collection.description %></small></h1>
  <div role="group" class="btn-group pull-right">
    <%= link_to 'Edit', edit_collection_path(@collection), class: 'btn btn-info btn-sm' %>
  </div>
</div>

<% unless @issues.empty? %>
  <table class="table">
    <caption><%= @collection.name %>'s Issues</caption>
    <thead>
      <tr>
        <th>Title</th>
        <th>Labels</th>
        <th>Project</th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <td><%= link_to issue.title , issue%></td>
          <td><%= issue.label_string %></td>
          <td><%= link_to issue.project.name, issue.project %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
