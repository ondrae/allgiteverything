<div class="box">

  <div class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= link_to user.github_name do %>
          <%= image_tag user.image, size: '64', style: 'border-radius: 5px;' %>
        <% end %>
      </p>
    </figure>
    <div class="media-content">
        <p class="media-heading title"><%= link_to user.github_name, user.github_name %></p>
        <ul>
          <li>
            <%= link_to user_collections_path(user) do %>
              Collections <span class="tag"><%= user.collections.count %></span>
            <% end %>
          </li>
          <li>
            <%= link_to user_projects_path(user) do %>
              Projects <span class="tag"><%= user.projects.count %></span>
            <% end %>
          </li>
          <li>
            <%= link_to user_issues_path(user) do %>
              Issues <span class="tag"><%= user.issues.count %></span>
            <% end %>
          </li>
    </div>
  </div>

  <% if current_user == user %>

    <hr />

    <footer class="level is-mobile">
      <%= link_to new_collection_path, class: "button is-primary is-outlined level-item" do %>
        Create a Collection &nbsp; <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
      <%= link_to new_project_path, class: "button is-primary is-outlined level-item" do %>
        Add a Project &nbsp; <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
    </footer>

  <% end %>
</div>
