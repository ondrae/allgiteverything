<div class="box">
  <div class="content">
    <p class="title"><%= link_to project.name, project.url %></p>
    <p class="subtitle"><%= project.description %></p>
  </div>

  <ul class="control is-grouped">
    <li>
      <%= link_to "Collection", project.collection, class: "button" %>
    </li>
    <li>
      <%= link_to project_issues_path(project), class: "button" do %>
        Issues <span class="tag"><%= project.issues.count %></span>
      <% end %>
    </li>
  </ul>
</div>
