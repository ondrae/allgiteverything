<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control">
    <%= f.label :url, class: "label" do %>
      Add a Github repository or a whole Github organization
    <% end %>
    <br>
    <%= f.text_field :url, class: 'input is-large', placeholder: "https://github.com/codeforamerica" %>
  </div>
  <% if @current_collection %>
      <%= f.hidden_field :collection_id, value: @current_collection.id %>
  <% else %>
    <div class="control">
      <%= f.label :collection_id, class: "label" %>
      <span class="select is-large">
        <%= f.collection_select :collection_id, @collections, :id, :name, {} %>
      </span>
    </div>
  <% end %>
  <p class="control">
    <%= f.submit 'Submit', class: 'button is-primary is-large' %>
    <%= link_to 'Back', projects_path, class: 'button is-large' %>
  </p>
<% end %>
