<div class="box">

  <p class="title"><%= link_to issue.title, issue.url %></p>

  <p>
    <% issue.labels.each do |label| %>
      <span class="issue tag" style="background-color: #<%= label.color %>"><%= label.name %></span>
    <% end %>
  </p>

  <% if issue.labels.present? %>
    <br />
  <% end %>

  <hr />

  <footer class="level is-mobile">
    <div class="level-left">
      <%= link_to issue.project.name, issue.project.url, class: "button level-item" %>
    </div>
    <div class="level-right">
      <span class="level-item"><%= issue.updated_at.to_date %></span>
    </div>
  </footer>

</div>
