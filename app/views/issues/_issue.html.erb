<div class="tile is-child box">
  <% if issue.featured? %>
    <span class="featured-tag tag is-warning is-pulled-right"><i class="fa fa-star" aria-hidden="true"></i> Featured</span>
  <% end %>

  <p class="title"><%= link_to issue.title, issue.url %></p>

  <p>
    <% issue.labels.each do |label| %>
      <span class="issue tag" style="background-color: #<%= label.color %>"><%= label.name %></span>
    <% end %>
  </p>
  <br/>

  <p>Issue Updated <%= time_ago_in_words issue.github_updated_at %> ago</p>

  <hr />

  <footer>
    <ul>
      <% unless params[:controller] == "collections" %>
        <li>Collection: <%= link_to issue.project.collection.name, short_collection_path(issue.project.collection) %></li>
      <% end %>
      <li>Repo: <%= link_to issue.project.name, issue.project.url %></li>
      <li>
        Owner:
        <%= link_to "https://github.com/" + issue.project.owner_login do %>
          <%= image_tag issue.project.owner_avatar_url, class: "small-github-avatar" %> <%= issue.project.owner_login %>
        <% end %>
      </li>
      <% if issue.project.collection.user == current_user %>
        <br />
        <% if issue.featured? %>
          <li>
            <%= link_to '<i class="fa fa-star" aria-hidden="true"></i> Unfeature'.html_safe, unfeature_issue_path(issue), class: "button is-primary is-outlined", method: :put %>
          </li>
        <% else %>
          <li>
            <%= link_to '<i class="fa fa-star" aria-hidden="true"></i> Make Featured'.html_safe, feature_issue_path(issue), class: "button is-primary is-outlined", method: :put %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </footer>

</div>
