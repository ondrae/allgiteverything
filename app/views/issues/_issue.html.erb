<div class="tile is-child box">

  <p class="title"><%= link_to issue.title, issue.url %></p>

  <p>
    <% issue.labels.each do |label| %>
      <span class="issue tag" style="background-color: #<%= label.color %>"><%= label.name %></span>
    <% end %>
  </p>
  <br/>

  <p>Issue Updated <%= time_ago_in_words issue.updated_at %> ago</p>

  <hr />

  <footer>
    <ul>
      <li>Collection: <%= link_to issue.project.collection.name %></li>
      <li>Repo: <%= link_to issue.repo_name, issue.repo_url %></li>
      <li>
        Owner:
        <%= link_to issue.project.url do %>
          <%= image_tag issue.project.owner_avatar_url, class: "small-github-avatar" %> <%= issue.project.owner_login %>
        <% end %>
      </li>
    </ul>
  </footer>

</div>
