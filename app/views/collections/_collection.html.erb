<div class="box">

  <p class="title"><%= link_to collection.name, collection %></p>
  <p class="subtitle"><%= collection.description %></p>

  <hr />

  <footer class="level is-mobile">
    <div class="level-left">
      <%= link_to collection_projects_path(collection), class: "button level-item" do %>
        Projects <span class="tag"><%= collection.projects.count %></span>
      <% end %>
    </div>
    <div class="level-right">
      <%= link_to collection_issues_path(collection), class: "button level-item" do %>
        Issues <span class="tag"><%= collection.issues.count %></span>
      <% end %>
    </div>
  </footer>

</div>
