<div class="box">
  <header>
    <p class="title"><%= link_to collection.name, collection %></p>
    <p class="subtitle"><%= collection.description %></p>
  </header>

  <br/>

  <ul>
    <li>
      <%= link_to collection_projects_path(collection) do %>
        Projects in collection: <span class="tag"><%= collection.projects.count %></span>
      <% end %>
    </li>
    <li>
      <%= link_to collection_path(collection) do %>
        Help Wanted Issues in collection: <span class="tag"><%= collection.issues.help_wanted.count %></span>
      <% end %>
    </li>
    <li>
      By: <%= link_to user_path(collection.owner.github_name) do %>
          <%= image_tag collection.owner.image, class: "small-github-avatar" %> <%= collection.owner.github_name %>
      <% end %>
    </li>
  </ul>

  <% if current_user == collection.user %>

    <br />

    <footer class="level">
      <%= link_to new_collection_project_path(collection), class: "button is-primary is-outlined level-item" do %>
        Add a Project &nbsp; <i class="fa fa-plus" aria-hidden="true"></i>
      <% end %>
      <%= link_to collection, class: "button is-primary is-outlined level-item", method: :delete, data: { confirm: 'Are you sure?' } do %>
        Remove Collection &nbsp; <i class="fa fa-trash" aria-hidden="true"></i>
      <% end %>
      <%= link_to edit_collection_path(collection), class: "button is-primary is-outlined level-item" do %>
        Edit Collection &nbsp; <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
      <%= link_to update_from_github_collection_path(collection), class: "button is-primary is-outlined level-item github-modal", method: :put, remote: true do %>
        Update from Github &nbsp; <i class="fa fa-github" aria-hidden="true"></i>
      <% end %>
    </footer>

  <% end %>

</div>
