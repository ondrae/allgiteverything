<% content_for :title, "#helpwanted" %>
<% content_for :sub_title do %>
  GitHub issues that need your help. 👏
<% end %>

<% @issues.in_groups_of(3, false).each do |issues| %>
  <div class="tile">
    <%= render issues %>
  </div>
<% end %>

<%= paginate @issues %>
<p><%= page_entries_info @issues %></p>
